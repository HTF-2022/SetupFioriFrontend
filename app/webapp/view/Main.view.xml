<mvc:View
		controllerName="com.flexso.htf2022.controller.Main"
		xmlns:mvc="sap.ui.core.mvc"
		xmlns:core="sap.ui.core" 
		xmlns:m="sap.m"
		xmlns="sap.f"
		xmlns:layout="sap.ui.layout"
		xmlns:smc="sap.ui.comp.smartmicrochart"
		xmlns:mc="sap.suite.ui.microchart"
		height="100%">
		<DynamicPage id="dynamicPageId" class="wallpaper" backgroundDesign="Transparent">
			<!-- DynamicPage Title -->
			<title>
				<DynamicPageTitle class="titleBackground">
					<heading>
						<m:HBox alignContent="Center">
							<m:Image src="./img/data_rising_icon.jpg" width="20px" height="20px" class="sapUiSmallMarginEnd"/>
							<m:Title text="Interactive Dashboard" class="graphColor"/>
						</m:HBox>
					</heading>
					<!-- <actions>
						<m:Button
								icon="sap-icon://action"
								type="Transparent"/>
					</actions> -->
				</DynamicPageTitle>
			</title>
			<content>
				<m:VBox width="100%">
					<m:HBox class="sapUiMediumMarginBottom">
						<m:GenericTile class="sapUiSmallMargin tileLayout graphBackground tileBorder" size="L" header="{i18n>totalConsumption}" subheader="{i18n>thisMonth}" press="pressTotalConsumptionMonth">
							<m:TileContent unit="{i18n>unitMonth}" footer="">
								<m:NumericContent scale="{ path:'reg>/flow/totalConsumptionMonth', formatter:'.tileScaleformatter' }" value="{ path:'reg>/flow/totalConsumptionMonth', formatter:'.tileValueformatter' }" valueColor="{reg>/flow/totalConsumptionMonthValueState}" indicator="{reg>/flow/totalConsumptionMonthIndicator}" withMargin="false" />
							</m:TileContent>
						</m:GenericTile>
						<m:GenericTile class="sapUiSmallMargin tileLayout graphBackground tileBorder" size="L" header="{i18n>totalConsumption}" subheader="{i18n>thisWeek}" press="pressTotalConsumptionWeek">
							<m:TileContent unit="{i18n>unitWeek}" footer="">
								<m:NumericContent scale="{ path:'reg>/flow/totalConsumptionWeek', formatter:'.tileScaleformatter' }" value="{ path:'reg>/flow/totalConsumptionWeek', formatter:'.tileValueformatter' }" valueColor="{reg>/flow/totalConsumptionWeekValueState}" indicator="{reg>/flow/totalConsumptionWeekIndicator}" withMargin="false" />
							</m:TileContent>
						</m:GenericTile>
						<m:GenericTile class="sapUiSmallMargin tileLayout sapUiLargeMarginEnd graphBackground tileBorder" size="L" header="{i18n>totalConsumption}" subheader="{i18n>last24Hours}" press="pressTotalConsumptionToday">
							<m:TileContent unit="{i18n>unitDay}" footer="">
								<m:NumericContent scale="{ path:'reg>/flow/totalConsumptionToday', formatter:'.tileScaleformatter' }" value="{ path:'reg>/flow/totalConsumptionToday', formatter:'.tileValueformatter' }" valueColor="{reg>/flow/totalConsumptionTodayValueState}" indicator="{reg>/flow/totalConsumptionTodayIndicator}" withMargin="false" />
							</m:TileContent>
						</m:GenericTile>

						<m:GenericTile class="sapUiSmallMargin tileLayout sapUiLargeMarginBegin graphBackground tileBorder" size="L" header="{i18n>averageConsumption}" subheader="{i18n>thisMonth}" press="pressAverageConsumptionMonth">
							<m:TileContent unit="{i18n>unitDay}" footer="">
								<m:NumericContent scale="{ path:'reg>/flow/averageConsumptionMonth', formatter:'.tileScaleformatter' }" value="{ path: 'reg>/flow/averageConsumptionMonth', formatter:'.tileValueformatter' }" valueColor="{reg>/flow/averageConsumptionMonthValueState}" indicator="{reg>/flow/averageConsumptionMonthIndicator}" withMargin="false" />
							</m:TileContent>
						</m:GenericTile>
						<m:GenericTile class="sapUiSmallMargin tileLayout graphBackground tileBorder" size="L" header="{i18n>averageConsumption}" subheader="{i18n>thisWeek}" press="pressAverageConsumptionWeek">
							<m:TileContent unit="{i18n>unitDay}" footer="">
								<m:NumericContent scale="{ path:'reg>/flow/averageConsumptionWeek', formatter:'.tileScaleformatter' }" value="{ path: 'reg>/flow/averageConsumptionWeek', formatter:'.tileValueformatter' }" valueColor="{reg>/flow/averageConsumptionWeekValueState}" indicator="{reg>/flow/averageConsumptionWeekIndicator}" withMargin="false" />
							</m:TileContent>
						</m:GenericTile>
						<m:GenericTile class="sapUiSmallMargin tileLayout graphBackground tileBorder" size="L" header="{i18n>averageConsumption}" subheader="{i18n>today}" press="pressAverageConsumptionToday">
							<m:TileContent unit="{i18n>unitHours}" footer="">
								<m:NumericContent scale="{ path:'reg>/flow/averageConsumptionToday', formatter:'.tileScaleformatter' }" value="{ path: 'reg>/flow/averageConsumptionToday', formatter:'.tileValueformatter' }" valueColor="{reg>/flow/averageConsumptionTodayValueState}" indicator="{reg>/flow/averageConsumptionTodayIndicator}" withMargin="false" />
							</m:TileContent>
						</m:GenericTile>
					</m:HBox>
					<m:HBox>
						<m:VBox class="sapUiLargeMarginEnd">
							<m:Title text="Consumption in Days" class="sapUiSmallMarginBottom graphColor"/>
							<m:FlexBox width="30rem" height="18rem" alignItems="Center" class="sapUiSmallMargin graphBackground">
								<m:items>
									<mc:InteractiveBarChart displayedBars="7" selectionChanged="interactiveBarChartSelectionChanged" press="interactiveBarChartPressed" bars="{reg>/flow/flowBars}" class="sapUiSmallMarginTop">
										<mc:bars>
											<mc:InteractiveBarChartBar 
												value="{reg>flow}" 
												label="{path: 'reg>date', formatter:'.dateFormatter'}" 
												color="{= 1000 > ${reg>flow} ? 'Good' : ( 1500 > ${reg>flow} ? 'Critical' : 'Error' )}" 
												selected="{reg>selected}"
												class="graphColor"/>
										</mc:bars>
									</mc:InteractiveBarChart>
								</m:items>
							</m:FlexBox>
						</m:VBox>
						<m:VBox class="sapUiLargeMarginEnd">
							<m:Title text="Consumption in Hours" class="sapUiSmallMarginBottom graphColor"/>
							<m:FlexBox width="50rem" height="18rem" alignItems="Center" class="sapUiSmallMargin graphBackground">
								<m:items>
									<mc:InteractiveLineChart selectionChanged="interactiveLineChartSelectionChanged" press="interactiveLineChartPressed" displayedPoints="25" points="{reg>/flow/flowPoints}" selectionEnabled="true" precedingPoint="1" succeedingPoint="1">
										<mc:points>
											<mc:InteractiveLineChartPoint value="{reg>flow}" label="{ path: 'reg>datetime', formatter:'.timeFormatter'}" color="{= 149 > ${reg>flow} ? 'Good' : ( 199 > ${reg>flow} ? 'Critical' : 'Error' )}"/>
										</mc:points>
									</mc:InteractiveLineChart>
								</m:items>
							</m:FlexBox>
						</m:VBox>
					</m:HBox>
				</m:VBox>
			</content>
		</DynamicPage>
</mvc:View>