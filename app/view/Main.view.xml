<mvc:View
		controllerName="com.flexso.htf2022.controller.Main"
		xmlns:mvc="sap.ui.core.mvc"
		xmlns:core="sap.ui.core" 
		xmlns:m="sap.m"
		xmlns="sap.f"
		xmlns:layout="sap.ui.layout"
		xmlns:smc="sap.ui.comp.smartmicrochart"
		xmlns:mc="sap.suite.ui.microchart"
		height="100%">
		<DynamicPage id="dynamicPageId">
			<!-- DynamicPage Title -->
			<title>
				<DynamicPageTitle>
					<heading>
						<m:HBox alignContent="Center">
						<m:Title text="Interactive Dashboard"/>
						<!-- <Image src="https://cdn-icons-png.flaticon.com/128/2991/2991231.png" width="20px" height="20px"/> -->
						</m:HBox>
					</heading>
					<actions>
						<m:Button
								icon="sap-icon://action"
								type="Transparent"/>
					</actions>
				</DynamicPageTitle>
			</title>
			<!-- DynamicPage Header -->
			<header>
				<DynamicPageHeader pinnable="true">
					<m:GenericTile class="sapUiSmallMargin tileLayout" size="L" header="Average consumption" subheader="Past Month" press="press">
						<m:TileContent unit="L" footer="">
							<m:NumericContent scale="M" value="{reg>/flow/averageConsumptionMonth}" valueColor="Error" indicator="Up" withMargin="false" />
						</m:TileContent>
					</m:GenericTile>
					<m:GenericTile class="sapUiSmallMargin tileLayout" size="L" header="Average consumption" subheader="Past week" press="press">
						<m:TileContent unit="L" footer="">
							<m:NumericContent scale="M" value="{reg>/flow/averageConsumptionWeek}" valueColor="Error" indicator="Up" withMargin="false" />
						</m:TileContent>
					</m:GenericTile>
					<m:GenericTile class="sapUiSmallMargin tileLayout" size="L" header="Average consumption" subheader="Today" press="press">
						<m:TileContent unit="L" footer="">
							<m:NumericContent scale="M" value="{reg>/flow/averageConsumptionToday}" valueColor="Error" indicator="Up" withMargin="false" />
						</m:TileContent>
					</m:GenericTile>
				</DynamicPageHeader>
			</header>
			<content>
				<m:HBox>
					<m:VBox class="sapUiLargeMarginEnd">
						<m:Title text="Consumption in Days" class="sapUiSmallMarginBottom"/>
						<m:FlexBox width="30rem" height="20rem" alignItems="Center" class="sapUiSmallMargin">
							<m:items>
								<mc:InteractiveBarChart displayedBars="7" selectionChanged="interactiveBarChartSelectionChanged" press="interactiveBarChartPressed" bars="{reg>/flow/flowBars}">
									<mc:bars>
										<mc:InteractiveBarChartBar 
											value="{reg>flow}" 
											label="{path: 'reg>date', formatter:'.dateFormatter'}" 
											color="{}" 
											selected="{reg>selected}"/>
									</mc:bars>
								</mc:InteractiveBarChart>
							</m:items>
						</m:FlexBox>
					</m:VBox>
					<m:VBox class="sapUiLargeMarginEnd">
						<m:Title text="Consumption in Hours"/>
						<m:FlexBox width="50rem" height="20rem" alignItems="Center" class="sapUiSmallMargin">
							<m:items>
								<mc:InteractiveLineChart selectionChanged="interactiveLineChartSelectionChanged" press="interactiveLineChartPressed" displayedPoints="25" points="{reg>/flow/flowPoints}" selectionEnabled="true" precedingPoint="1" succeedingPoint="1">
									<mc:points>
										<mc:InteractiveLineChartPoint value="{reg>flow}" label="{path: 'reg>datetime', formatter:'.timeFormatter'}" color="{}"/>
									</mc:points>
								</mc:InteractiveLineChart>
							</m:items>
						</m:FlexBox>
					</m:VBox>
					<!-- <m:VBox class="sapUiLargeMarginEnd">
						<m:Title text="Consumption in Hours"/>
						<m:FlexBox width="20rem" height="10rem" alignItems="Center" class="sapUiSmallMargin">
							<smc:SmartLineMicroChart
								id="idLineChart"
								entitySet="FlowStream"
								width="20rem" height="10rem"/>
						</m:FlexBox>
					</m:VBox> -->
				</m:HBox>
			</content>
		</DynamicPage>
</mvc:View>